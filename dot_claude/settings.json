{
  "model": "sonnet",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command", 
            "command": "[ -f ~/notes.aicomp/config/mandatory_onboard.py ] && python ~/notes.aicomp/config/mandatory_onboard.py || echo 'Onboard script not found, skipping...'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "[ -f ~/notes.aicomp/config/claude_environment_check.py ] && python ~/notes.aicomp/config/claude_environment_check.py || true"
          }
        ]
      }
    ]
  }
}