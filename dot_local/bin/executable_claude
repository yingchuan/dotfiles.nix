#!/usr/bin/env bash
set -euo pipefail
# claude PATH-stable wrapper managed by chezmoi
for c in "$HOME/.nix-profile/bin/claude" \
         "/usr/local/bin/claude" \
         "$HOME/.claude/local/claude"; do
  if [ -x "$c" ]; then exec "$c" "$@"; fi
done
echo "claude not found in known locations: $HOME/.nix-profile/bin/claude, /usr/local/bin/claude, $HOME/.claude/local/claude" >&2
exit 127
