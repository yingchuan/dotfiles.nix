#!/usr/bin/env bash
set -euo pipefail
# codex PATH-stable wrapper managed by chezmoi
for c in "$HOME/.nix-profile/bin/codex" \
         "/usr/local/bin/codex" \
         "$HOME/.codex/local/codex"; do
  if [ -x "$c" ]; then exec "$c" "$@"; fi
done
echo "codex not found in known locations: $HOME/.nix-profile/bin/codex, /usr/local/bin/codex, $HOME/.codex/local/codex" >&2
exit 127
